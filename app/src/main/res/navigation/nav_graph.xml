<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.FeedFragment"
        android:label="feed_fragment"
        tools:layout="@layout/feed_fragment">
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_thisPostFragment"
            app:destination="@id/thisPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.activity.NewPostFragment"
        android:label="new_post_fragment"
        tools:layout="@layout/new_post_fragment" >
        <argument
            android:name="initialText"
            app:argType="string" />
    </fragment>
    <argument
        android:name="initialText"
        android:defaultValue=""
        app:argType="string" />
    <action
        android:id="@+id/globalToNewPostFragment"
        app:destination="@+id/newPostFragment"
        />
    <fragment
        android:id="@+id/thisPostFragment"
        android:name="ru.netology.nmedia.activity.ViewPostFragment"
        android:label="ThisPostFragment" >
        <action
            android:id="@+id/action_thisPostFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <argument
            android:name="postId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
</navigation>